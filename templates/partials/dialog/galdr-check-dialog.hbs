<form>
    <div class="form-group">
        <label>{{localize "yggdrasill.magicCpt.zoneTargets"}}</label>   
        <select class="targets" data-type="{{type}}" data-sub-type="{{data.type}}" data-owner-id="{{owner}}" data-name="{{add path ".value"}}" data-sd="{{add path ".sd"}}" name="targets" style="width:100%">
            {{#if (eq item.data.type "illusions") }}
                {{#select actor.data.magicCpt.galdrCpt.galdrTargets.value}}
                    {{#each config.galdrTargets.illusions as |path key|}}
                        <option name="targets" value="{{key}}">{{localize (add path ".size")}} {{localize (add path ".value")}} | {{localize "yggdrasill.magicCpt.difficultyLevel"}} : {{localize (add path ".sd")}}</option>
                    {{/each}}
                {{/select}}
            {{else}}
                {{#if (eq item.data.type "charms") }}
                    {{#select actor.data.magicCpt.galdrCpt.galdrTargets.value}}
                        {{#each config.galdrTargets.charms as |path key|}}
                            <option name="targets" value="{{key}}">{{localize (add path ".value")}} | {{localize "yggdrasill.magicCpt.difficultyLevel"}} : {{localize (add path ".sd")}}</option>
                        {{/each}}
                    {{/select}}
                {{else}}
                    {{#select actor.data.magicCpt.galdrCpt.galdrTargets.value}}
                        {{#each config.galdrTargets.curses as |path key|}}
                            <option name="targets" value="{{key}}">{{localize (add path ".value")}} | {{localize "yggdrasill.magicCpt.difficultyLevel"}} : {{localize (add path ".sd")}}</option>
                        {{/each}}
                    {{/select}}
                {{/if}}
            {{/if}}
        </select>
    </div>
    <div class="form-group">
        <label>{{localize "yggdrasill.magicCpt.durationN"}}</label>
        <select class="duration" name="duration" data-key="{{key}}" data-owner-id="{{owner}}" path="data.magicCpt.galdrCpt.galdrDuration.value" style="width:100%">
            {{#select actor.data.magicCpt.galdrCpt.galdrDuration.value}}
                {{#each config.galdrDuration as |path key|}}
                    <option name="duration" value="{{key}}">{{localize (add path ".value")}} | {{localize "yggdrasill.magicCpt.difficultyLevel"}} : {{localize (add path ".sd")}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label>{{localize "yggdrasill.chat.other.furor"}}</label>
        {{#if (upper actor.data.nbDiceFuror.max actor.data.reserve.value)}}
            <input class="furor" name="nbRollDiceFuror" type="number" min="{{actor.data.nbDiceFuror.min}}" max="{{actor.data.reserve.value}}" value="{{actor.data.nbDiceFuror.value}}" data-type="Number" style="text-align: right;"><p style="margin: 0.35em 0;">/{{actor.data.reserve.value}}</p>
        {{else}}
            <input class="furor" name="nbRollDiceFuror" type="number" min="{{actor.data.nbDiceFuror.min}}" max="{{actor.data.nbDiceFuror.max}}" value="{{actor.data.nbDiceFuror.value}}" data-type="Number" style="text-align: right;"><p style="margin: 0.35em 0;">/{{actor.data.reserve.value}}</p> 
        {{/if}}
    </div>
    <div class="form-group"  style="display: grid; grid-template-columns:repeat(3, 1fr); gap:2px;">
        <label>{{localize "yggdrasill.chat.other.destiny"}}</label>
        <input type="checkbox" name="isDestinyRoll"/>
    </div>    
    <div class="form-group">
        <label>{{localize "yggdrasill.chat.other.modifier"}}</label>
        <input type="number" name="ModificatorRollValue" data-type="Number" value="0"/>
    </div>
</form>