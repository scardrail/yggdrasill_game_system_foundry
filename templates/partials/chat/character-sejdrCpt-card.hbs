{{> "systems/yggdrasill/templates/partials/chat/rollCheck.hbs"}}
<div>
    <h2>{{localize "yggdrasill.magicCpt.name"}} : {{item.name}}</h2>

    {{localize "yggdrasill.magicCpt.preparation"}} :  {{item.data.preparation.value}} {{localize (lookup config.magicDuration item.data.preparation.unit)}}
</div>
<div>
    {{localize "yggdrasill.magicCpt.durationN"}} :  {{item.data.durationValue}}
</div>
{{#if (not failure)}}
    <div>
        {{localize "yggdrasill.magicCpt.zone"}} :  {{item.data.zone}}
    </div>
    <div>
        {{#if (not (eq item.data.positiveness "both"))}}
            {{localize "yggdrasill.magicCpt.effects"}} :  {{{item.data.effects}}}
        {{else}}
            {{#if (eq positiveness "positive")}}
                {{localize "yggdrasill.magicCpt.effects"}} :  {{{item.data.effects}}}
            {{else}}
                {{localize "yggdrasill.magicCpt.effects"}} :  {{{item.data.invertEffects}}}
            {{/if}}
        {{/if}}
    </div>
{{/if}}


