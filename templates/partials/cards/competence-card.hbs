<tr class="skill-item item" data-item-id="{{_id}}">
    <td>
        <input class="skill-name inline-edit" data-field="name" type="text" value="{{name}}"/>
        </td>
    <td>
        <input class="skill-value inline-edit" data-field="data.value" type="number" value="{{data.value}}"/>
        </td>
    <td>
        <a class="item-edit" title="{{localize "yggdrasill.sheet.editCpt"}}">
            <i class="fas fa-edit"></i>
        </a>
    </td>
    <td>
        <a class="item-delete" title="{{localize "yggdrasill.sheet.deleteCpt"}}">
            <i class="fas fa-trash"></i>
        </a>
    </td>
</tr>