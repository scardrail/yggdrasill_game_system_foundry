            <tr>
                <th colspan="2">{{localize "yggdrasill.extra.fight"}}</th>
            </tr>
            <tr>
                <td>
                    <a class="item-roll" data-extra=true data-value={{data.data.conflict.offensive.value}} data-modifier={{data.data.actions.modifier}}>Attaque</a>
                </td>
                <td>
                    <a class="item-roll" data-extra=true data-value={{data.data.conflict.defensive.value}} data-modifier={{data.data.actions.modifier}}>DÃ©fense</a>
