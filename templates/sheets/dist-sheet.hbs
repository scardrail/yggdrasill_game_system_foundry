<form class="flexcol {{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="128" width="128" />
        <h1>
            <input name="name" type="text" value="{{item.name}}" placeholder="Name" />
        </h1>
    </header>
    <body>
        <label>Dégâts
            <input name="data.degats" type="text" value="{{data.degats}}" placeholder="Dégâts"/>
        </label>
        <label>Solidité
            <input name="data.solidite" type="text" value="{{data.solidite}}" placeholder="Solidité"/>
        </label>
        <label>Encombrement
            <input name="data.encombrement" type="text" value="{{data.encombrement}}" placeholder="Enc."/>
        </label>
        <label>Portée (C/M/L/E)
            <input name="data.porteeC" type="text" value="{{data.porteeC}}" placeholder="C"/>
            <input name="data.porteeM" type="text" value="{{data.porteeM}}" placeholder="M"/>
            <input name="data.porteeL" type="text" value="{{data.porteeL}}" placeholder="L"/>
            <input name="data.porteeE" type="text" value="{{data.porteeE}}" placeholder="E"/>
        </label>
        <label>Valeur
            <input name="data.valeur" type="text" value="{{data.valeur}}" placeholder="Valeur"/>
        </label>
    </body>
</form>