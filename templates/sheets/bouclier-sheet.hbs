<form class="flexcol {{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="128" width="128" />
        <h1>
            <input name="name" type="text" value="{{item.name}}" placeholder="Name" />
        </h1>
    </header>
    <body>
        <label>Défense Physique
            <input name="data.defensePhys" type="text" value="{{data.defensePhys}}" placeholder="DP"/>
        </label>
        <label>Solidité
            <input name="data.solidite" type="text" value="{{data.solidite}}" placeholder="Solidité"/>
        </label>
        <label>Encombrement
            <input name="data.encombrementO" type="text" value="{{data.encombrementO}}" placeholder="O"/>/
            <input name="data.encombrementI" type="text" value="{{data.encombrementI}}" placeholder="I"/>
        </label>
        <label>Valeur
            <input name="data.valeur" type="text" value="{{data.valeur}}" placeholder="Valeur"/>
        </label>
    </body>
</form>