<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="128" width="128" />
        <h1>
            <input name="name" type="text" value="{{item.name}}" placeholder="Name" />
        </h1>
    </header>
    <div class="sheet-content">
        <h3>
            {{localize "yggdrasill.description"}}
        </h3>
        {{editor content=data.data.description target="data.description" button=true owner=owner editable=editable}}
        <h3>
            {{localize "yggdrasill.magicCpt.type"}}
        </h3>
        <table>
            <tr>
                <th>{{localize "yggdrasill.magicCpt.type"}}</th>
                <td>
                    <select name="data.type" style="width:100%">
                        {{#select data.data.type}}
                        {{#each config.galdrTypes as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
            </tr>
            <tr>
                <th>{{localize "yggdrasill.magicCpt.difficultyLevel"}}</th>
                <td>
                    <input name="data.difficultyLevel" type="number" min="3" step="3" max="15" value="{{data.data.difficultyLevel}}" data-type="Number">
                </td>
            </tr>
        </table>
        </div>
</form>