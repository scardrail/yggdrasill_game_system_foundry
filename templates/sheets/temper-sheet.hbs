<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="128" width="128" />
        <h1>
            <input name="name" type="text" value="{{item.name}}" placeholder="Name" />
        </h1>
    </header>
    <div class="sheet-content">
        <table class="cacacs-up">
            <tr>
                <th>{{localize "yggdrasill.temper.nbCaracUp"}}</th>
                <td>
                    <input class="nbCaracs-edit" name="data.nbCaracUp" type="number" min="1" value="{{data.data.nbCaracUp}}" data-type="Number">
                </td>
            </tr>
            {{#data.data.caracs}}
            <tr>
                <th>{{localize "yggdrasill.temper.caracName"}}</th>
                <td>
                    <select  class="temper-name inline-edit" data-field="name" data-identifier="{{@index}}" value={{type}}  style="width:100%">
                        {{#select name}}
                        {{#each ../config.extraCarac as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
                <td><input type="number" class="temper-modifier inline-edit" data-field="modifier" data-identifier="{{@index}}" value={{modifier}} data-type="Number"></td>
                
                {{#if (eqOr name "conflict" name "mystic")}}
                    <td>
                        <input type="number" class="temper-sndModifier inline-edit" data-field="sndModifier" data-identifier="{{@index}}" value={{sndModifier}} data-type="Number">
                    </td>
                {{/if}}
            </tr>
            {{/data.data.caracs}}
        </table>
        <h3>
            {{localize "yggdrasill.description"}}
        </h3>
        {{editor content=data.data.description target="data.description" button=true owner=owner editable=editable}}
    </div>
</form>